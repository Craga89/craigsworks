		block stylesheets_fonts
			link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,600|Roboto:400,100,300', rel='stylesheet', type='text/css')
			link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', rel='stylesheet', type='text/css')
			
