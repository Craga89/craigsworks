		block scripts_head
		
		//if lt IE 9
			link(rel='stylesheet', href='css/ie.css')

	body
		block container
			main#container
				header#header: .container
					block header
						.fixed
							a.logo(href='#', title='Back to top')
								img.img-circle(src='/images/logo.png', alt='Craig Michael Thompson', width=60, height=60)

							a.hire.btn.btn-default.btn-xs(href='mailto:craig@craigsworks.com?subject=Job+Proposal') 
								span.fa.fa-check-circle.text-success
								|  Hire me

						.static.text-center
							img#logo.logo.img-circle(src='/images/logo.png', alt='Craig Michael Thompson', width=120, height=120)

							h1 Craig Michael Thompson
								small Newcastle Upon Tyne, United Kingdom

							h2 a Front-end Web Developer / Consultant

